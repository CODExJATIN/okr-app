generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Objective {
  id           String         @id @default(uuid())
  title        String
  isCompleted  Boolean        @default(false)
  progress     Int            @default(0)
  keyResults   KeyResult[]
  OKREmbedding OKREmbedding[]
}

model KeyResult {
  id          String    @id @default(uuid())
  description String
  progress    Int       @default(0)
  objectiveId String
  metric      String    @default("percentage")
  target      Int       @default(100)
  objective   Objective @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
}

model OKREmbedding {
  id          Int                    @id @default(autoincrement())
  objectiveId String
  embedding   Unsupported("vector")?
  content     String                 @default("")
  Objective   Objective              @relation(fields: [objectiveId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "Document_objectiveId_fkey")
}
